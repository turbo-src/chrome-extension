{
  "name": "turbo-src",
  "short_name": "turbo-src",
  "version": "0.0.1",
  "manifest_version": 3,
  "description": "Vote on pull requests.",
  "homepage_url": "https://turbosrc.org",
  "author": "turbo-src",
  "icons": {
    "16": "icons/turbo-src16.png",
    "48": "icons/turbo-src48.png",
    "128": "icons/turbo-src128.png"
  },
  "action": {
    "default_icon": "icons/turbo-src48.png",
    "default_popup": "popup.html",
    "default_title": "turbo-src"
  },
  "host_permissions": [
    "*://*.github.com/*",
    "http://localhost:4000/graphql/*",
    "https://turbosrc-auth.fly.dev/*"
  ],
  "permissions": [
    "storage",
    "activeTab",
    "webRequest",
    "webNavigation"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.github.com/*",
        "https://turbosrc-auth.fly.dev/*"
      ],
      "css": [
        "./modal.css"
      ],
      "js": [
        "inject.bundle.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_ui": {
    "page": "options.html"
  }
}